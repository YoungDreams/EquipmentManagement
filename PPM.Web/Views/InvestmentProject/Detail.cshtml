@using Foundation.Core
@using PensionInsurance.Entities
@using PensionInsurance.Web.Common
@model PensionInsurance.Web.Views.InvestmentProject.EditViewModel

@section Styles{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-select/css/bootstrap-select.min.css") rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
    <style type="text/css">
        #investment-project-map {
            height: 240px;
            width: 100%;
        }
    </style>
}

<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="javascript:;">项目信息</a>
            </li>
            <li>
                <span>查看</span>
            </li>
        </ul>
    </div>
}

<!-- END PAGE BAR -->
<div>
    <div class="portlet box green" style="margin-top: 10px;">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>项目信息
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">城市</label>
                                    <div class="col-md-8">
                                        <label>@Model.AreaName</label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">地址</label>
                                    <div class="col-md-8">
                                        <label>@Model.Address</label>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">项目类型</label>
                                    <div class="col-md-8">
                                        <label>@Model.InvestmentProjectType.ToString()</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">项目状态</label>
                                    <div class="col-md-8">
                                        <label>@Model.Status.ToString()</label>
                                    </div>
                                </div>
                                @if (!Model.FilePath.IsNullOrWhiteSpace())
                                {
                                    <div class="form-group">
                                        <label class="text-right col-md-4 control-label">KMZ文件</label>
                                        <div class="col-md-8">

                                            <a href="@Url.Content(Model.FilePath)">@Model.FileName</a>

                                        </div>
                                    </div>
                                }
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">项目商业模式</label>
                                    <div class="col-md-8">
                                        <label>@Model.BusinessPattern.ToString()</label>
                                    </div>
                                </div>
                                @if (!Model.IncorporatedCompany.IsNullOrWhiteSpace())
                                {
                                    <div class="form-group">
                                        <label class="text-right col-md-4 control-label">项目所属法人公司</label>
                                        <div class="col-md-8">
                                            <label>@Model.IncorporatedCompany</label>
                                        </div>
                                    </div>
                                }
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">获取方式</label>
                                    <div class="col-md-8">
                                        <label>@Model.ObtainMethod.ToString()</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">建设用地面积</label>
                                    <div class="col-md-8">
                                        <label>@Model.BuildingLandAcreage</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">建筑面积</label>
                                    <div class="col-md-8">
                                        <label>@Model.BuildingAcreage</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">地上建筑面积</label>
                                    <div class="col-md-8">
                                        <label>@Model.BuildingAcreageGround</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">地下建筑面积</label>
                                    <div class="col-md-8">
                                        <label>@Model.BuildingAcreageUnderGround</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">经度</label>
                                    <div class="col-md-8">
                                        <label>@Model.Longitude</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="text-right col-md-4 control-label">纬度</label>
                                    <div class="col-md-8">
                                        <label>@Model.Latitude</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="text-right col-md-4 control-label">项目名称</label>
                            <div class="col-md-8">
                                <label>@Model.Name</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                        <div id="investment-project-map" class="baidu-maps"></div>
                    </div>
                    <!--/span-->
                </div>

                <!--/row-->
                <div class="row text-center">
                    <div class="col-md-12">
                        <button type="button" class="btn yellow btn-sm padding-lf-15" onclick="javascript: history.back(-1);">返回上一页</button>
                    </div>
                </div>
                <!-- END FORM-->
            </div>
            <!-- END FORM-->
        </div>
    </div>
</div>

<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">地块列表</span>
                </div>
            </div>
            <div class="portlet-body">
                <div>
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>序号</th>
                            <th>地块名称</th>
                            <th>分期</th>
                            <th>用地性质</th>
                            <th>建设用地面积</th>
                            <th>建筑面积</th>
                            <th>地上建筑面积</th>
                            <th>地下建筑面积</th>
                            <th>容积率</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.InvestmentProjectLands)
                        {
                            <tr>
                                <td>@Model.InvestmentProjectLands.RowNumberOf(item)</td>
                                <td>@item.LandName</td>
                                <td>@item.Period</td>
                                <td>@item.LandCharacteristics.ToString()</td>
                                <td>@item.BuildingLandAcreage.FormatString()</td>
                                <td>@item.BuildingAcreage.FormatString()</td>
                                <td>@item.BuildingAcreageGround.FormatString()</td>
                                <td>@item.BuildingAcreageUnderGround.FormatString()</td>
                                <td>@item.Plotratio.FormatString()</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js") type="text/javascript"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=9m1N4vGOG5EGhwVEhPc2PUdDRU2zv2Sd"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var map = new BMap.Map("investment-project-map");
            map.centerAndZoom(new BMap.Point(@Model.Longitude, @Model.Latitude), 13);
            map.enableScrollWheelZoom(true);

            var latLong = new BMap.Point(@Model.Longitude, @Model.Latitude);
            var marker = new BMap.Marker(latLong);
            map.addOverlay(marker);

            var lebel = new BMap.Label('@Model.Name' + ":" + '@Model.Address', { offset: new BMap.Size(20, -10) });
            lebel.setStyle({
                cursor: "pointer"
            });
            marker.setLabel(lebel);

            map.addControl(new BMap.MapTypeControl({ mapTypes: [BMAP_NORMAL_MAP, BMAP_HYBRID_MAP] }));
        });
    </script>
}