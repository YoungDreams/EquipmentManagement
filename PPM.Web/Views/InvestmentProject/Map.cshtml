@using PensionInsurance.Entities
@model PensionInsurance.Web.Views.InvestmentProject.MapViewModel
    
@section Styles{
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-select/css/bootstrap-select.min.css") rel="stylesheet" type="text/css" />
    <style type="text/css">
        #investment-project-map {
            height: 630px;
            width: 100%;
        }
        .BMap_mask {
            height:100%;
        }

    </style>
}

<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>投资拓展管理</span>
            </li>
        </ul>
    </div>
}
<!-- END PAGE BAR -->
<div class="row">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-search"></i>投资拓展查询
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="@Url.Action("Map","InvestmentProject")" class="form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">项目名称</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" name="Query.Name" value="@Model.Query.Name"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">项目类型</label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(x => x.Query.Types, Model.Types, new { multiple = "", @class = "selectpicker" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">项目状态</label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(x => x.Query.Status, Model.Status, new { multiple = "", @class = "selectpicker" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-offset-5">
                                        <button type="submit" class="btn green">查询</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6"> </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="tabbable-custom">
            <ul class="nav nav-tabs">
                <li class="">
                    <a data-showloading="true" href="@Url.Action("Index", "InvestmentProject")"> 项目信息 </a>
                </li>
                <li class="active">
                    <a data-showloading="true" href="@Url.Action("Map", "InvestmentProject")"> 地图显示 </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="portlet border-default">
                    <div class="portlet-title">
                        <div class="portlet-body">
                            <div id="investment-project-map" class="baidu-maps" ></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js") type="text/javascript"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=9m1N4vGOG5EGhwVEhPc2PUdDRU2zv2Sd"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.selectpicker').selectpicker({
                style: 'btn-xs',
                iconBase: 'fa',
                tickIcon: 'fa-check',
                noneSelectedText: "--未选择--"
            });

            $("select[name='Query.Types']").val(@Html.Raw(Json.Encode(Model.Query.Types?.Select(x=>x.ToString()))));
            $("select[name='Query.Status']").val(@Html.Raw(Json.Encode(Model.Query.Status?.Select(x => x.ToString()))));
            $('.selectpicker').selectpicker('refresh');

            var map = new BMap.Map("investment-project-map");
            map.centerAndZoom(new BMap.Point(116.402544, 39.91582), 5);
            map.enableScrollWheelZoom();

            var projects = @Html.Raw(Json.Encode(Model.Items));

            $(projects).each(function (idx, project) {
                var ccRedIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_red_cc.png")', new BMap.Size(36, 45));
                var cbRedIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_red_cb.png")', new BMap.Size(36, 45));
                var clrcRedIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_red_clrc.png")', new BMap.Size(36, 45));

                var ccGreenIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_green_cc.png")', new BMap.Size(36, 45));
                var cbGreenIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_green_cb.png")', new BMap.Size(36, 45));
                var clrcGreenIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_green_clrc.png")', new BMap.Size(36, 45));

                var ccGrayIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_gray_cc.png")', new BMap.Size(36, 45));
                var cbGrayIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_gray_cb.png")', new BMap.Size(36, 45));
                var clrcGrayIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_gray_clrc.png")', new BMap.Size(36, 45));

                var ccYellowIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_yellow_cc.png")', new BMap.Size(36, 45));
                var cbYellowIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_yellow_cb.png")', new BMap.Size(36, 45));
                var clrcYellowIcon = new BMap.Icon('@Url.Content("~/assets/baidumap/img/marker_yellow_clrc.png")', new BMap.Size(36, 45));

                var latLong = new BMap.Point(project.Longitude, project.Latitude);
                var marker;
                if (project.InvestmentProjectType == @((int)ProjectType.CC)) {
                    if (project.Status == @((int)InvestmentProjectStatus.关闭)) {
                        marker = new BMap.Marker(latLong, { icon: ccGrayIcon });
                    }
                    if (project.Status == @((int)InvestmentProjectStatus.在营)) {
                        marker = new BMap.Marker(latLong, { icon: ccGreenIcon });
                    }
                    if (project.Status == @((int)InvestmentProjectStatus.跟进)) {
                        marker = new BMap.Marker(latLong, { icon: ccRedIcon });
                    }
                    if (project.Status == @((int)InvestmentProjectStatus.在建)) {
                        marker = new BMap.Marker(latLong, { icon: ccYellowIcon });
                    }
                }
                if (project.InvestmentProjectType == @((int)ProjectType.CB)) {
                    if (project.Status == @((int)InvestmentProjectStatus.关闭)) {
                        marker = new BMap.Marker(latLong, { icon: cbGrayIcon });
                    }
                    if (project.Status == @((int)InvestmentProjectStatus.在营)) {
                        marker = new BMap.Marker(latLong, { icon: cbGreenIcon });
                    }
                    if (project.Status == @((int)InvestmentProjectStatus.跟进)) {
                        marker = new BMap.Marker(latLong, { icon: cbRedIcon });
                    }
                    if (project.Status == @((int)InvestmentProjectStatus.在建)) {
                        marker = new BMap.Marker(latLong, { icon: cbYellowIcon });
                    }
                }
                if (project.InvestmentProjectType == @((int)ProjectType.CLRC)) {
                    if (project.Status == @((int)InvestmentProjectStatus.关闭)) {
                        marker = new BMap.Marker(latLong, { icon: clrcGrayIcon });
                    }
                    if (project.Status == @((int)InvestmentProjectStatus.在营)) {
                        marker = new BMap.Marker(latLong, { icon: clrcGreenIcon });
                    }
                    if (project.Status == @((int)InvestmentProjectStatus.跟进)) {
                        marker = new BMap.Marker(latLong, { icon: clrcRedIcon });
                    }
                    if (project.Status == @((int)InvestmentProjectStatus.在建)) {
                        marker = new BMap.Marker(latLong, { icon: clrcYellowIcon });
                    }
                }
                map.addOverlay(marker);

                var lebel = new BMap.Label(project.Name, { offset: new BMap.Size(30, -10) });
                lebel.setStyle({
                    cursor: "pointer"
                });
                marker.setLabel(lebel);
            });
            map.addControl(new BMap.MapTypeControl({ mapTypes: [BMAP_NORMAL_MAP, BMAP_HYBRID_MAP] }));

            var menu = new BMap.ContextMenu();
            var txtMenuItem = [
                {
                    text: '放大',
                    callback: function () { map.zoomIn() }
                },
                {
                    text: '缩小',
                    callback: function () { map.zoomOut() }
                },
                {
                    text: '全屏',
                    callback: function () { 
                        $('#investment-project-map').css('height', document.documentElement.clientHeight);
                        $('.portlet-title').css('background-color', '#ffffff');
                        $('.portlet-title').css('padding', '0');
                        $('#investment-project-map').addClass('fullscreen');
                        $('.fullscreen').click();
                        $('#investment-project-map').removeClass('fullscreen');
                    },
                }
            ];
            for (var i = 0; i < txtMenuItem.length; i++) {
                menu.addItem(new BMap.MenuItem(txtMenuItem[i].text, txtMenuItem[i].callback, 100));
            }
            map.addContextMenu(menu);
        });
    </script>
}