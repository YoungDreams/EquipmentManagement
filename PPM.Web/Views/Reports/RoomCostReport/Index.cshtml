@using PensionInsurance.Entities
@using PensionInsurance.Query
@using PensionInsurance.Shared
@using PensionInsurance.Web.Common;
@model PensionInsurance.Web.Views.Reports.RoomCostReport.IndexViewModel
@section Styles{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-select/css/bootstrap-select.min.css") rel="stylesheet" type="text/css"/>
}
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="@Url.Action("Index", "Reports")">统计报表</a>
                <i class="fa fa-circle"></i>
            </li>
            <li><span>房间价目表</span></li>
        </ul>
    </div>
}

<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-search"></i>房间价目表 - 查询条件
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form id="report-search-form" action="@Url.Action("Index", "RoomCostReport")" class="form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">所属项目</label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(x => x.Query.ProjectIds, Model.ProjectList, new { multiple = "", @class = "selectpicker" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="text-center"><button type="submit" class="btn green btn-sm padding-lf-15 " data-showloading="true">查询</button></div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">房间价目表</span>
                </div>
                <div class="actions">
                    @if (PensionInsurance.Shared.WebAppContext.Current.User.HasPermission(ModuleType.统计报表, Permission.导出房间价目表))
                    {
                        <a href="javascript:;" class="btn green export-report"><i class="fa fa-repeat"></i>导出</a>
                    }
                </div>
            </div>
            <div class="portlet-body">
                <table class="table-report table table-bordered">
                    <thead>
                    <tr>
                        <th></th>
                        <th>项目</th>
                        <th>价格版本</th>
                        <th>房间总数</th>
                        <th>床位总数</th>
                        <th>房间平均价格</th>
                        <th>床位费平均价格</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var roomCost in Model.RoomCostReport)
                    {
                        <tr>
                            <td>
                                <a href="javascript:void(0)" class="table-expand">
                                    <i class="fa fa-plus-square-o"></i>
                                </a>
                            </td>
                            <td>@roomCost.ProjectName</td>
                            <td>@roomCost.EnabledTime.DateString()</td>
                            <td>@roomCost.RoomCount</td>
                            <td>@roomCost.BedCount</td>
                            <td>@roomCost.AverageRoomCost</td>
                            <td>@roomCost.AverageBedCost</td>
                        </tr>
                        <tr>
                            <td colspan="7">
                                <table class="table table-hover hidden table-expandable">
                                    <thead>
                                    <tr>
                                        <th>房型</th>
                                        <th>房型床位数</th>
                                        <th>房型总数</th>
                                        <th>房型床位总数</th>
                                        <th>标准房间费</th>
                                        <th>标准床位费</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var roomType in roomCost.RoomTypeDetails)
                                    {
                                        <tr>
                                            <td>@roomType.RoomType</td>
                                            <td>@roomType.RoomTypeBedCount</td>
                                            <td>@roomType.RoomCount</td>
                                            <td>@roomType.TotalBedCount</td>
                                            <td>@roomType.RoomCost</td>
                                            <td>@roomType.BedCost</td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('.selectpicker').selectpicker({
                style: 'btn-xs',
                iconBase: 'fa',
                tickIcon: 'fa-check',
                noneSelectedText: "--未选择--"
            });

            $("select[name='Query.ProjectIds']").val(@Html.Raw(Json.Encode(Model.Query.ProjectIds)));
            $('.selectpicker').selectpicker('refresh');

            $(document).on("click",
                ".export-report",
                function() {
                    var form = $("#report-search-form");
                    var projectIds = form.find("select[name='Query.ProjectIds']").val();

                    var command = {
                        ProjectIds: projectIds
                    };
                    App.confirm(function() {
                        form.postCommand('@Url.Action("Export", "RoomCostReport")',
                            command,
                            {
                                onSuccess: function(result) {
                                    window.location = "../" + result.redirect;
                                }
                            });
                    });
                }).on("click",
                ".table-expand",
                function() {
                    var $this = $(this);
                    var icon = $this.find("i");
                    if (icon.hasClass("fa-plus-square-o")) {
                        icon.removeClass("fa-plus-square-o").addClass("fa-minus-square-o");
                        $this.parents("tr").next().find(".table-expandable").removeClass("hidden");
                    } else {
                        icon.removeClass("fa-minus-square-o").addClass("fa-plus-square-o");
                        $this.parents("tr").next().find(".table-expandable").addClass("hidden");
                    }
                });

        });
    </script>
}  