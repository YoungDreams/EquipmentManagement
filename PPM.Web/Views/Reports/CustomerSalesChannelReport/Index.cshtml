@using Foundation.Core
@using PensionInsurance.Entities
@using PensionInsurance.Entities.Reports
@using PensionInsurance.Shared
@using PensionInsurance.Web.Common;
@model PensionInsurance.Web.Views.Reports.CustomerSalesChannelReport.IndexViewModel
@section Styles{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/css/bootstrap-timepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-select/css/bootstrap-select.min.css") rel="stylesheet" type="text/css" />
}
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="@Url.Action("Index", "Reports")">统计报表</a>
                <i class="fa fa-circle"></i>
            </li>
            <li><span>客户获知渠道统计报表</span></li>
        </ul>
    </div>
}
<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-search"></i>客户获知渠道统计报表 - 查询条件
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form id="report-search-form" action="@Url.Action("Index", "CustomerSalesChannelReport")" class="form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">项目类型</label>
                                    <div class="col-md-9">
                                        @Html.EnumTextDropDownListFor(x => x.Query.ProjectType, typeof(ProjectType), true)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">所属项目</label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(x => x.Query.ProjectIds, Model.ProjectList, new {multiple = "", @class = "selectpicker"})
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">时间范围</label>
                                    <div class="col-md-9">
                                        <div class="input-group month-picker input-daterange">
                                            @Html.InputText(m => m.Query.StartDate)
                                            <span class="input-group-addon"> 到 </span>
                                            @Html.InputText(m => m.Query.EndDate)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">统计类型</label>
                                    <div class="col-md-9">
                                        @Html.EnumTextDropDownListFor(x => x.Query.ReportChannelType, typeof(ReportChannelType), true)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="text-center"><button type="submit" class="btn green btn-sm padding-lf-15 " data-showloading="true">查询</button></div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">客户获知渠道统计报表</span>
                </div>
                <div class="actions">
                    @if (PensionInsurance.Shared.WebAppContext.Current.User.HasPermission(ModuleType.统计报表, Permission.导出客户获知渠道统计报表))
                    {
                       <a href="javascript:;" class="btn green export-report"><i class="fa fa-repeat"></i>导出</a>
                    }
                </div>
            </div>
            <div class="portlet-body">
                <table class="table-report table table-bordered">
                    <thead>
                        <tr>
                            @if (Model.Query.StartDate.HasValue && Model.Query.EndDate.HasValue && Model.Query.ReportChannelType.HasValue)
                            {
                                <th>项目</th>
                                <th>渠道</th>
                                for (DateTime i = Model.Query.StartDate.Value; i <= Model.Query.EndDate.Value; i = i.AddMonths(1))
                                {
                                    <th>@($"{i.Year}年{i.Month}月")</th>
                                }
                            }
                        </tr>
                    </thead>
                    <tbody>
                    @if (Model.Query.StartDate.HasValue && Model.Query.EndDate.HasValue && Model.Query.ReportChannelType.HasValue && Model.Projects.Count() > 1)
                    {
                        var isRowSpan = true;
                        foreach (var channel in Model.Channels)
                        {
                            if (Model.GetTotal(Model.Projects.Select(x => x.Id).ToList(), channel.Name,Model.Query.StartDate.Value, Model.Query.EndDate.Value) == 0)
                            {
                                continue;
                            }
                            <tr>
                                @if (isRowSpan)
                                {
                                    <td rowspan="@Model.GetRowSpanCount(Model.Projects.Select(x => x.Id).ToList(),Model.Query.StartDate.Value, Model.Query.EndDate.Value)">汇总</td>
                                }
                                <td>@channel.Name</td>
                                @for (DateTime i = Model.Query.StartDate.Value; i <= Model.Query.EndDate.Value; i = i.AddMonths(1))
                                {
                                    <td>@(Model.GetReports(Model.Projects.Select(x => x.Id).ToList(), channel.Name, i)?.Sum(x => x.Total))</td>
                                }
                            </tr>
                            isRowSpan = false;
                        }

                    }
                    @if (Model.Query.StartDate.HasValue && Model.Query.EndDate.HasValue && Model.Query.ReportChannelType.HasValue)
                    {
                        foreach (var project in Model.Projects)
                        {
                            var isRowSpan = true;
                            foreach (var channel in Model.Channels)
                            {
                                if (Model.GetTotal(project.Id,channel.Name,Model.Query.StartDate.Value, Model.Query.EndDate.Value) == 0)
                                {
                                    continue;
                                }
                                <tr>
                                    @if (isRowSpan)
                                    {
                                        <td rowspan="@Model.GetRowSpanCount(project.Id,Model.Query.StartDate.Value, Model.Query.EndDate.Value)">@project.Name</td>
                                    }
                                    <td>@channel.Name</td>
                                    @for (DateTime i = Model.Query.StartDate.Value; i <= Model.Query.EndDate.Value; i = i.AddMonths(1))
                                    {
                                        <td>@(Model.GetReport(project.Id, channel.Name, i)?.Total)</td>
                                    }
                                </tr>
                                isRowSpan = false;
                            }
                        }
                    }
                    <tr></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('.selectpicker').selectpicker({
                style: 'btn-xs',
                iconBase: 'fa',
                tickIcon: 'fa-check',
                noneSelectedText: "--未选择--"
            });

            $("select[name='Query.ProjectIds']").val(@Html.Raw(Json.Encode(Model.Query.ProjectIds)));
            $('.selectpicker').selectpicker('refresh');

            $("input[name='Query.StartTime']").datepicker({
                startDate: "2017-01",
                orientation: "left",
                autoclose: true,
                startView: "months",
                minViewMode: "months",
                format: "yyyy-mm"
            });

            $(document).on("click", ".export-report", function () {
                var form = $("#report-search-form");
                var projectIds = form.find("select[name='Query.ProjectIds']").val();
                var st = $("#Query_StartDate").val();
                var et = $("#Query_EndDate").val();
                var projectType = $("#Query_ProjectType").val();
                var reportChannelType = $("#Query_ReportChannelType").val();
                var command = {
                    ProjectIds: projectIds,
                    ProjectType: projectType,
                    ReportChannelType:reportChannelType,
                    StartDate: st,
                    EndDate: et
                };
                App.confirm(function () {
                    form.postCommand('@Url.Action("Export", "CustomerSalesChannelReport")', command, {
                        onSuccess: function (result) {
                            window.location = "../" + result.redirect;
                        }
                    });
                });
            });
        });
    </script>
}  