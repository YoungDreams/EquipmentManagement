@using PensionInsurance.Shared
@model PensionInsurance.Web.Views.Reports.SalesReport.SalesPersonReportViewModel
@section Styles{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.css") rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
}

<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>管理中心</span>
            </li>
        </ul>
    </div>
}
<!-- END PAGE BAR -->
<!-- BEGIN PAGE TITLE-->
<h3 class="page-title"></h3>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">

            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="@Url.Action("SalesPersonReport", "SalesReport")" class="form-inline">

                    <div class="form-group">
                        <label class="control-label" style="margin-right: 5px;">项目</label>

                        <select name="ProjectId">
                            @foreach (var project in Model.Projects)
                            {
                                <option value="@project.Id" @(project.Id == Model.Query.ProjectId ? "selected" : "")>@project.Name</option>
                            }
                        </select>

                    </div>
                    <div class="form-group">
                        <label class="control-label" style="margin-right: 5px;">销售人员状态</label>

                        <select name="IsEnabled">
                            <option value="" @((!Model.Query.IsEnabled.HasValue) ? "selected" : string.Empty)>所有</option>
                            <option value="True" @((Model.Query.IsEnabled.HasValue && Model.Query.IsEnabled == true) ? "selected" : string.Empty)>在职</option>
                        </select>

                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn green btn-xs padding-lf-15 " data-showloading="true">查询</button>
                    </div>

                </form>
                <!-- END FORM-->
            </div>

        </div>
        <div class="table-scrollable">
            <table class="table table-bordered table-report">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        @foreach (var week in Model.Weeks)
                        {
                            <th class="tooltips" data-container="body" data-placement="top" data-original-title="@week.GetDateRangeString()">@week.Start.ToString("MM-dd")<br />@week.End.ToString("MM-dd")</th>
                        }
                    </tr>

                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        @foreach (var week in Model.Weeks)
                        {
                            <th>@week.Number</th>
                        }
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.WeeklyData)
                    {
                        <tr>
                            <td style="white-space: nowrap" rowspan="6">@item.Key.Projects.Single().Name</td>
                            <td style="white-space: nowrap" rowspan="6">@item.Key.RealName</td>
                            <td style="white-space: nowrap">接电数量</td>



                            @foreach (var weeklyItem in item.Value)
                            {
                                <td style="white-space: nowrap">@weeklyItem.Value.Sum(x => x.IncomingPhoneCount) </td>
                            }
                        </tr>

                        <tr>
                            <td style="white-space: nowrap">有效来电</td>
                            @foreach (var weeklyItem in item.Value)
                            {
                                <td>@weeklyItem.Value.Sum(x => x.ValidIncomingPhoneCount)</td>
                            }
                        </tr>

                        <tr>
                            <td style="white-space: nowrap">接访数量</td>
                            @foreach (var weeklyItem in item.Value)
                            {
                                <td>@weeklyItem.Value.Sum(x => x.VisitCount)</td>
                            }
                        </tr>

                        <tr>
                            <td style="white-space: nowrap">有效来访</td>
                            @foreach (var weeklyItem in item.Value)
                            {
                                <td>@weeklyItem.Value.Sum(x => x.ValidVisitCount)</td>
                            }
                        </tr>

                                <tr>
                                    <td style="white-space: nowrap">电转访</td>
                                    @foreach (var weeklyItem in item.Value)
                                    {
                                        <td>@weeklyItem.Value.Sum(x => x.IncomingPhoneToVisitCount)</td>
                                    }
                                </tr>

                                <tr>
                                    <td style="white-space: nowrap">成交（房间数）</td>
                                    @foreach (var weeklyItem in item.Value)
                                    {
                                        <td>@weeklyItem.Value.Sum(x => x.RoomCount)</td>
                                    }
                                </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
