@using PensionInsurance.Entities
@using PensionInsurance.Shared
@using Foundation.Core
@using PensionInsurance.Web.Common
@model PensionInsurance.Web.Views.HealthManagement.HealthMonitoringViewModel
<div class="row">
    <div class="form-body" style="padding-right:30px;">
        <table style="width:100%; height:100%; text-align:center;  font-size:14px;border-right:1px solid #e7ecf1">
            <tr>
                <td style="height:120px;">
                    @if (Model.CustomerInfo.Sex == "男")
                    {
                        <img src=@Url.Content("~/assets/global/img/sex-1-01.png") alt="" />
                    }
                    else
                    {
                        <img src=@Url.Content("~/assets/global/img/sex-2-01.png") alt="" />
                    }
                </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #e7ecf1; height:45px;">
                    @Model.CustomerInfo.CustomerName
                </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #e7ecf1; height:45px;">
                    <img src=@Url.Content("~/assets/global/img/menu-01.png") alt="" />&nbsp;&nbsp;&nbsp;基本信息
                </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #e7ecf1; height:45px; font-weight:600; ">
                    <img src=@Url.Content("~/assets/global/img/menu-02.png") alt="" />&nbsp;&nbsp;&nbsp;健康体检
                </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #e7ecf1; height:45px;">
                    <img src=@Url.Content("~/assets/global/img/menu-04.png") alt="" />&nbsp;&nbsp;&nbsp;健康医疗
                </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #e7ecf1; height:45px;">
                    <img src=@Url.Content("~/assets/global/img/menu-05.png") alt="" />&nbsp;&nbsp;&nbsp;健康医嘱
                </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #e7ecf1; height:45px;">
                    <img src=@Url.Content("~/assets/global/img/menu-06.png") alt="" />&nbsp;&nbsp;&nbsp;慢病检测
                </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #e7ecf1;height:calc(100% - 375px);border-right:1px solid #e7ecf1"></td>
            </tr>
        </table>
    </div>
</div>
