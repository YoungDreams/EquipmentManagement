@using PensionInsurance.Entities
@using PensionInsurance.Shared
@model PensionInsurance.Web.Views.Contract.ChooseContractTemplateViewModel

<link href="@Url.Content("~/assets/global/plugins/icheck/skins/all.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/global/plugins/uniform/css/uniform.default.css")" rel="stylesheet" type="text/css" />

<form id="contarct-template-form" data-ajax="true" action="@Url.Action("ChooseContractTemplate", "Contract")" method="POST" class="form-horizontal">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bubble font-green-sharp"></i>
                <span class="caption-subject font-green-sharp sbold">养老机构服务合同模板</span>
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="row" style="margin-top: 5px;">
                    <div class="col-md-9">
                        <div class="input-group">
                            <div class="skin skin-square">
                                <div class="icheck-list">
                                    <label>
                                        <input type="radio" name="ContractTemplate" class="icheck" data-radio="iradio_square-orange" value="@ContractTemplate.养老机构服务合同20170801新签">@ContractTemplate.养老机构服务合同20170801新签
                                    </label>
                                    <label>
                                        <input type="radio" name="ContractTemplate" class="icheck" data-radio="iradio_square-orange" value="@ContractTemplate.养老机构服务合同20170801换签">@ContractTemplate.养老机构服务合同20170801换签
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.CustomerId)
                    @Html.HiddenFor(m => m.PreviousContractId)
                </div>
            </div>
        </div>
    </div>
    <div class="errors alert alert-danger fade in" style="display: none;"></div>
</form>
<script src="@Url.Content("~/assets/global/plugins/icheck/icheck.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function() {
        App.handleiCheck();
    });
    
</script>