<!-- END PAGE BAR -->
<div class="row">
    <div class="col-md-12">
        <div class="portlet" style="margin-top: 10px;">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>商品查询
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form id="index-form" action="@Url.Action("Index","Product",new {page = Model.Items.Page,pageSize = Model.Items.PageSize})" class="form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">名称</label>
                                    <div class="col-md-9">
                                        <input type="text" autocomplete="off" class="form-control" data-provide="typeahead" data-items="5" id="QueryName" name="Query.Name" value="@Model.Query.Name" />
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">是否启用</label>
                                    <div class="col-md-9">
                                        <select name="Query.Published" class="form-control input-small">
                                            <option value="">--未选择--</option>
                                            <option value="True" @(Model.Query.Published.HasValue && Model.Query.Published.Value ? "selected=selected" : "")>启用</option>
                                            <option value="False" @(Model.Query.Published.HasValue && !Model.Query.Published.Value ? "selected=selected" : "")>失效</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">分类名称</label>
                                    <div class="input-group col-md-8">
                                        <input type="text" class="form-control" disabled id="productCategoryText" value="@Model.CategoryText" placeholder="选择分类">
                                        <input id="productCategoryId" type="hidden" name="Query.ProductCategoryId" value="@Model.Query.ProductCategoryId" />
                                        <span id="getCategories" class="input-group-addon" style="padding: 3px 12px;">
                                            <i class="fa fa-bars font-red"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">供应商</label>
                                    <div class="col-md-9">
                                        @*@Html.DropDownListFor(x => x.Query.ProductSupplierId.Value, Model.Suppliers, new { @class = "form-control input-small" })*@
                                        <select name="Query.ProductSupplierId" class="form-control input-small">
                                            <option value="">--未选择--</option>
                                            @foreach (var item in Model.Suppliers)
                                            {
                                                var selected = Model.Query.ProductSupplierId.HasValue && item.Value == Model.Query.ProductSupplierId.Value.ToString();
                                                <option value="@item.Value" @(selected ? "selected=selected" : "")>@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">城市</label>
                                    <div class="col-md-9">
                                        @*@Html.DropDownListFor(x => x.Query.ProductSupplierId.Value, Model.Suppliers, new { @class = "form-control input-small" })*@
                                        <select name="Query.AreaId" class="form-control input-small">
                                            <option value="">--未选择--</option>
                                            @foreach (var item in Model.Areas)
                                            {
                                                var selected = Model.Query.AreaId.HasValue && item.Value == Model.Query.AreaId.Value.ToString();
                                                <option value="@item.Value" @(selected ? "selected=selected" : "")>@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-offset-5">
                                        <button type="submit" class="btn green">查询</button>
                                        @if (WebAppContext.Current.User.HasPermission(ModuleType.商品管理, Permission.导出))
                                        {
                                            <a href="javascript:void(0);" id="export-product" class="btn green">
                                                导出产品
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6"> </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">商品列表</span>
                </div>
                <div class="actions">
                    @if (WebAppContext.Current.User.HasPermission(ModuleType.商品管理, Permission.新增))
                    {
                        <a href="@Url.Action("Create", "Product")" class="btn green">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            新增
                        </a>
                    }
                    @*<a id="addTrack" href="javascript:;" onclick="batchEditPrice();" class="btn green" role="button">
                            <i class="fa fa-plus"></i>批量编辑
                        </a>*@
                    @if (WebAppContext.Current.User.HasPermission(ModuleType.商品管理, Permission.下载商品价格模版))
                    {
                        <a href="@Url.Action("DownLoad", "Product")" class="btn green">
                            下载价格模版
                        </a>
                    }
                    @if (WebAppContext.Current.User.HasPermission(ModuleType.商品管理, Permission.导入商品价格))
                    {
                        <a href="JavaScript:;" class="btn green importProductPrice">
                            <i class="fa fa-rotate-left" aria-hidden="true"></i>导入价格
                        </a>
                    }
                    @if (WebAppContext.Current.User.HasPermission(ModuleType.商品管理, Permission.生成商品助记词))
                    {
                        <a id="GenerateProductQueryCode" href="JavaScript:;" class="btn green" role="button">
                            生成助记词
                        </a>
                    }
                    @if (WebAppContext.Current.User.HasPermission(ModuleType.商品管理, Permission.导入))
                    {
                        <a href="javascript:;" class="btn green product-import">
                            <i class="fa fa-rotate-left" aria-hidden="true"></i>
                            导入产品
                        </a>
                    }
                </div>
            </div>

            <div class="portlet-body">
                <div class="table">
                    <table id="productlist" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>名称</th>
                                <th>编码</th>
                                <th>分类名称</th>
                                <th>品牌</th>
                                <th>规格型号</th>
                                <th>单位</th>
                                <th>供应商</th>
                                <th>价格</th>
                                <th>城市</th>
                                <th>描述 </th>
                                <th>是否启用</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PriceItems)
                            {
                                var rowspan = item.Items.Count;

                                for (var i = 0; i < rowspan; i++)
                                {
                                    if (i == 0)
                                    {
                                        <tr>
                                            @if (string.IsNullOrEmpty(item.ThumbnailPath))
                                            {
                                                <td rowspan="@rowspan" class="center"><img src="@Url.Content("~/assets/layouts/layout/img/noimg.jpg")" class="avatar" title="暂无图片" alt="暂无图片">@item.Product</td>
                                            }
                                            else
                                            {
                                                <td rowspan="@rowspan" class="center"><img src="@Url.Content(item.ThumbnailPath)" class="avatar" alt="">@item.Product</td>
                                            }
                                            <td rowspan="@rowspan" class="center"> @item.Code</td>
                                            <td rowspan="@rowspan" class="center"> @item.ProductCategory</td>
                                            <td rowspan="@rowspan" class="center"> @item.Brand </td>
                                            <td rowspan="@rowspan" class="tooltips" data-container="body" data-placement="top" data-original-title="@item.Specification">@item.Specification.SubString(10, "...")</td>
                                            <td rowspan="@rowspan" class="center"> @item.Unit </td>
                                            <td> @item.Items[i].Supplier </td>
                                            <td>
                                                @(item.IsMaterial ? item.Items[i].Min + "---" + item.Items[i].Max : " --- ") <span class="pull-right">
                                                    @(item.Items[i].Price)元 @if (item.Items[i].IsValid)
                                                    {<span>有效</span>}
                                                    else
                                                    {<span>失效</span>}
                                                </span>
                                            </td>
                                            <td>@item.Area</td>
                                            <td rowspan="@rowspan" class="tooltips center" data-container="body" data-placement="top" data-original-title="@item.Description">@item.Description.SubString(15, "...")</td>
                                            <td rowspan="@rowspan" class="center">@(item.Published ? "启用" : "失效")</td>
                                            <td rowspan="@rowspan" class="center">
                                                @if (WebAppContext.Current.User.HasPermission(ModuleType.商品管理, Permission.编辑))
                                                {
                                                    <a href="@Url.Action("Edit", "Product", new {id = item.PurchaseProductId,backUrl=Request.Url.ToString()})" class="btn default btn-xs yellow-stripe">编辑</a>
                                                }
                                                @if (WebAppContext.Current.User.HasPermission(ModuleType.商品管理, Permission.删除))
                                                {
                                                    <a href="javascript:;" data-command="@Model.DeleteCommand(item.PurchaseProductId, Request.Url.ToString()).ToJavascript()" class="btn default btn-xs red-stripe">删除</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td> @item.Items[i].Supplier </td>
                                            <td>
                                                @(item.Items[i].Min + "---" + item.Items[i].Max) <span class="pull-right">
                                                    @(item.Items[i].Price)元 @if (item.Items[i].IsValid)
                                                    {<span>有效</span>}
                                                    else
                                                    {<span>失效</span>}
                                                </span>
                                            </td>
                                            <td>@item.Items[i].Area</td>
                                        </tr>
                                    }


                                    @*<tr><td>@materielItem.Min</td>-<td>@materielItem.Max</td><td>@materielItem.Price</td></tr>*@
                                }
                            }
                        </tbody>
                    </table>

                    @Html.Partial("_Pagination", Model.Items)
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal small fade" id="productCategories" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:600px;">
        <div class="modal-content">
            <div class="modal-body">
                <div class="portlet box green">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>商品分类
                        </div>
                    </div>
                    <div class="portlet-body">
                        <!-- BEGIN FORM-->
                        <div id="tree_1" class="tree-demo">
                            @Html.Raw(Model.ProductCategoryTreeView.GetSubTreeNodes(Model.ProductCategoryTreeView.Trees))
                        </div>
                        <div id="category-noselect-error" class="alert alert-danger hidden">
                            <strong>未选择商品分类!</strong>
                        </div>
                        <div class="row">
                            <br />
                            <p>
                                <div class="text-center">
                                    <button id="select-product-category" class="btn green btn-sm padding-lf-15">确定</button>
                                    <button id="cancel-select-product-category" type="button" class="btn yellow btn-sm padding-lf-15" data-dismiss="modal">取消</button>
                                </div>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal small fade" id="batchEditPrice" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog" style="width:800px;">
        <form data-ajax="true" action="#" method="POST" class="form-horizontal" data-refresh="#items">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-gift"></i>供应商价格信息
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="control-label col-md-2">供应商</label>
                                            <div class="col-md-10">
                                                @Html.DropDownList("SupplierIds", Model.Suppliers, new { multiple = "", @class = "selectpicker" })
                                            </div>
                                            <div class="errors alert alert-danger fade in" style="display: none;"></div>
                                            <div class="row">
                                                <br />
                                                <p>
                                                    <div class="text-center">
                                                        <button id="export-batch-edit" class="btn green btn-sm padding-lf-15">导出</button>
                                                        <button type="button" class="btn yellow btn-sm padding-lf-15" data-dismiss="modal">返回</button>
                                                    </div>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- END FORM-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-typeahead.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-select/js/bootstrap-select.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <script>
        $(document).ready(function () {

            var queryKeyWords = $("#QueryName");
            queryKeyWords.typeahead({
                ajax: {
                    url: '@Url.Action("GetProducts", "Product")',
                    timeout: 300, // 延时
                    method: 'post',
                    triggerLength: 1, // 输入几个字符之后，开始请求
                    loadingClass: null, // 加载数据时, 元素使用的样式类

                    preDispatch: function (query) {
                        var para = { keyword: queryKeyWords.val() };
                        para.query = query;
                        return para;
                    },
                    preProcess: function (result) {

                        return result;
                    }
                },
                display: "Name", // 默认的对象属性名称为 name 属性
                items: 10, // 最多显示项目数量
                itemSelected: function (item, val, text) { // 当选中一个项目的时候，回调函数
                    var num = text.indexOf("-");
                    var str = text.substr(0, num);
                    $("#QueryName").val(str);
                }
            });

            $("#GenerateProductQueryCode").on("click", function () {
                var url = '@Url.Action("GenerateQueryCode", "Product")';
                var command = {};
                postCommand(url, command, $(this));
                return false;
            });

            $('#getCategories').on('click',
                function () {
                    var productCategories = $('#productCategories');
                    productCategories.modal('show');
                });

            $('#select-product-category').on('click',
                function () {
                    var checkedCategory = $('.jstree-clicked');
                    var categoryId = checkedCategory.attr('data-id');
                    var categoryText = checkedCategory.attr('data-text');
                    var error = $('#category-noselect-error');
                    if (categoryId || categoryText) {
                        error.addClass('hidden');
                        $('#productCategoryId').val(categoryId);
                        $('#productCategoryText').val(categoryText);

                        $('#cancel-select-product-category').click();
                    } else {
                        error.removeClass('hidden');
                    }
                });


        });

        $(document)
            .on("click",
                ".product-import",
                function () {
                    App.dialogMultipart('#Product-import-form', '@Url.Action("Import", "Product")');
                })
           .on("click",
                ".importProductPrice",
                function () {
                    App.dialogMultipart('#ProductPrice-import-form', '@Url.Action("ImportPrice", "Product")');
                })
            .on("click",
                "#export-product",
                function () {
                    $("#index-form").attr('action', '@Url.Action("ExportProduct", "Product")');
                    $("#index-form").submit();
                })
            ;
    </script>

}