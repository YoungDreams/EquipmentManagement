@using PensionInsurance.Entities
@using PensionInsurance.Web.Common
@model PensionInsurance.Web.Views.Sales.SaleChannel.EditViewModel
@section Styles{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/css/bootstrap-timepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/clockface/css/clockface.css") rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
}

<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="@Url.Action("Index","SaleChannel")">渠道管理</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>编辑</span>
            </li>
        </ul>
    </div>
}
<!-- END PAGE BAR -->

<div class="full-height-content full-height-content-scrollable">
    <div class="full-height-content-body">
        <form data-ajax="true" action="@Url.Action("Edit", "SaleChannel")" method="POST" class="form-horizontal">
            <div class="portlet box green" style="margin-top: 10px;">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>渠道信息
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">渠道名称</label>
                                    <div class="col-md-9">
                                        @Html.InputText(x => x.SaleChannelName)
                                        @Html.HiddenFor(x => Model.SaleChannelId)
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">渠道类型</label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(m => m.SaleChannelType, SettingType.渠道类型)
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">渠道状态</label>
                                    <div class="col-md-9">
                                        @Html.EnumTextDropDownListFor(m => m.SaleChannelStatus, typeof(EntityStatus))
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label col-md-3">所属项目</label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(x => x.ProjectId, Model.ProjectList, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-md-1">备注</label>
                                    <div class="col-md-11">
                                        <textarea class="form-control" name="Description" style="resize: none;">@Model.Description</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="portlet light bordered">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            <i class="icon-social-dribbble font-green"></i>
                                            <span class="caption-subject font-green bold uppercase">渠道联系人信息</span>
                                        </div>
                                        <div class="actions">
                                            <a id="addContactInfo" href="javascript:;" class="btn green" role="button">
                                                <i class="fa fa-plus"></i>新增渠道联系人
                                            </a>
                                        </div>
                                    </div>
                                    <div class="portlet-body">
                                        <div class="table">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th> 序号 </th>
                                                        <th> 联系人名称 </th>
                                                        <th> 联系电话 </th>
                                                        <th> 其他联系方式 </th>
                                                        <th> 电子邮箱 </th>
                                                        <th> 操作 </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.SaleChannelContacts)
                                                    {
                                                        <tr>
                                                            <td>@Model.SaleChannelContacts.RowNumberOf(item)</td>
                                                            <td>@item.Name</td>
                                                            <td>@item.Phone</td>
                                                            <td>@item.Phone2</td>
                                                            <td>@item.Email</td>
                                                            <td>
                                                                <a href="javascript:;" onclick="editContact(@item.Id)" class="btn default btn-xs red-stripe">
                                                                    编辑
                                                                </a>
                                                                <a href="javascript:;" data-command="@Model.DeleteContactCommand(item.Id).ToJavascript()" class="btn default btn-xs red-stripe">
                                                                    删除
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="portlet light bordered">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            <i class="icon-social-dribbble font-green"></i>
                                            <span class="caption-subject font-green bold uppercase">跟踪信息</span>
                                        </div>
                                        <div class="actions">
                                            <a id="addTrackingInfo" href="javascript:;" class="btn green" role="button">
                                                <i class="fa fa-plus"></i>新增跟踪信息
                                            </a>
                                        </div>
                                    </div>
                                    <div class="portlet-body">
                                        <div class="table">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th> 序号 </th>
                                                        <th> 跟踪编号 </th>
                                                        <th> 跟踪方式 </th>
                                                        <th> 开始日期 </th>
                                                        <th> 结束时间 </th>
                                                        <th> 是否完成 </th>
                                                        <th> 备注 </th>
                                                        <th> 操作 </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{ int count = 0; }
                                                    @foreach (var item in Model.SaleChannelTrackings)
                                                    {
                                                        count++;
                                                        <tr>
                                                            <td>@count</td>
                                                            <td>@item.SaleChannelTrackingNo</td>
                                                            <td>@item.TrackingType</td>
                                                            <td>@item.StartTime.DateString()</td>
                                                            <td>@(item.EndTime.HasValue? item.EndTime.Value.DateString():string.Empty)</td>
                                                            <td>@item.Status</td>
                                                            <td>@item.Description.SubString(20,"...")</td>
                                                            <td>
                                                                <a href="javascript:;" onclick="editTracking(@item.Id)" class="btn default btn-xs red-stripe">
                                                                    编辑
                                                                </a>
                                                                <a href="javascript:;" data-command="@Model.DeleteTrackingCommand(item.Id).ToJavascript()" class="btn default btn-xs red-stripe">
                                                                    删除
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END FORM-->
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <div class="form-body">
                        <div class="errors alert alert-danger fade in" style="display: none;"></div>
                        <!--/row-->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-actions">
                                    <div class="text-center">
                                        <button type="submit" class="btn green btn-sm padding-lf-15 ">保存</button>
                                        <button type="button" class="btn yellow btn-sm padding-lf-15 " onclick="javascript: history.back(-1);">返回上一页</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </form>

        <div class="modal small fade" id="contactInfo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form data-ajax="true" action="#" method="POST" class="form-horizontal">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="portlet box green">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-gift"></i>新增渠道联系人信息
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <!-- BEGIN FORM-->
                                    <div class="form-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">联系人名称</label>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" name="ContactName">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <!--/span-->
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">联系电话</label>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" name="Phone">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <!--/span-->
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">其他联系方式</label>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" name="Phone2">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <!--/span-->
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">电子邮箱</label>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control" name="Email">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">邮编</label>
                                                    <div class="col-md-9">
                                                        <input type="text" name="PostCode" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">地址</label>
                                                    <div class="col-md-9">
                                                        <input type="text" name="Address" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="errors alert alert-danger fade in" style="display: none;"></div>
                                        <div class="row">
                                            <p>
                                                <div class="text-center">
                                                    @Html.HiddenFor(x=>x.SaleChannelId)
                                                    <input type="hidden" name="ContactId"/>
                                                    <button class="btn green btn-sm padding-lf-15">保存</button>
                                                    <button id="cancelContact" class="btn yellow btn-sm padding-lf-15">返回</button>
                                                </div>
                                            </p>
                                        </div>
                                        <!-- END FORM-->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="modal small fade" id="trackingInfo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form data-ajax="true" action="#" method="POST" class="form-horizontal">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="portlet box green">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-gift"></i>新增跟踪信息
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <!-- BEGIN FORM-->
                                    <div class="form-body">
                                        <div class="row">
                                            <!--/span-->
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">跟踪方式</label>
                                                    <div class="col-md-9">
                                                        @Html.DropDownList("TrackingType", SettingType.跟踪方式)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <!--/span-->
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">开始日期</label>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control form-control-inline date-picker" name="StartTime" data-date-format="yyyy-mm-dd">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <!--/span-->
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">完成时间</label>
                                                    <div class="col-md-9">
                                                        <input type="text" class="form-control form-control-inline date-picker" name="EndTime" data-date-format="yyyy-mm-dd">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-md-3">备注</label>
                                                    <div class="col-md-9">
                                                        <textarea class="form-control" name="Description" style="resize: none;"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="errors alert alert-danger fade in" style="display: none;"></div>
                                        <div class="row">
                                            <p>
                                                <div class="text-center">
                                                    @Html.HiddenFor(x => x.SaleChannelId)
                                                    @Html.HiddenFor(x => x.ProjectId)
                                                    @Html.HiddenFor(x => x.UserId)
                                                    <input type="hidden" name="TrackingId" />
                                                    <button class="btn green btn-sm padding-lf-15">保存</button>
                                                    <button id="cancelTracking" class="btn yellow btn-sm padding-lf-15">返回</button>
                                                </div>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/clockface/js/clockface.js") type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <!-- END THEME GLOBAL SCRIPTS -->

    <script type="text/javascript">
        $(document).ready(function () {
            $("#addContactInfo").click(function () {
                var contact = $('#contactInfo');
                contact.modal('show');
                contact.find("form").attr("action", "@Url.Action("CreateContact","SaleChannel")");
                clearFormValues("contactInfo");
            });
            $("#addTrackingInfo").click(function () {
                var tracking = $('#trackingInfo');
                tracking.modal('show');
                tracking.find("form").attr("action", "@Url.Action("CreateTracking", "SaleChannel")");
                clearFormValues("trackingInfo");
            });
            $("#cancelContact").click(function () {
                $('#contactInfo').modal('hide');
                return false;
            });

            $("#cancelTracking").click(function() {
                $('#trackingInfo').modal('hide');
                return false;
            });
        });

        function editContact(id) {
            var contact = $('#contactInfo');
            $.get("@Url.Action("EditContact", "SaleChannel")"+"/"+id, function(result) {
                contact.modal('show');
                contact.find("form").attr("action", "@Url.Action("EditContact", "SaleChannel")");
                setFormValues(result);
            });
        }
        function editTracking(id) {
            var contact = $('#trackingInfo');
            $.get("@Url.Action("EditTracking", "SaleChannel")"+"/"+id, function(result) {
                contact.modal('show');
                contact.find("form").attr("action", "@Url.Action("EditTracking", "SaleChannel")");
                result.StartTime = jsonDateFormat(result.StartTime);
                result.EndTime = jsonDateFormat(result.EndTime);

                setFormValues(result);
            });
        }
    </script>
}
