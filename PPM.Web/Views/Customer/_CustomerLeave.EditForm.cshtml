@model PensionInsurance.Web.Views.Customer.EditCustomerLeaveViewModel
@using PensionInsurance.Web.Common
<form id="customer-leave-back-modal" data-ajax="true" action="@Url.Action("BackCustomerLeave", "Customer")" method="POST" class="form-horizontal">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bubble font-green-sharp"></i>
                <span class="caption-subject font-green-sharp sbold">销假</span>
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-body">
                <div class="row" style="margin-top: 5px;">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="text-right col-md-3">销假时间</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control form-control-inline" id="ResumptionTime" name="ResumptionTime" data-date-format="yyyy-mm-dd hh:ii" readonly value="@(Model.ResumptionTime == null ? "" : Model.ResumptionTime.Value.ToString("yyyy-MM-dd HH:mm"))">
                            </div>
                            @Html.HiddenFor(m => m.CustomerLeaveId)
                        </div>
                    </div>
                </div>
                <div class="alert alert-info">
                    <strong><i class="fa fa-info-circle"></i></strong> 销假时间在12点以前，当天不退费。
                </div>
                <div class="errors alert alert-danger fade in" style="display: none;"></div>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        
        $('#ResumptionTime').datetimepicker({
            autoclose: true,
            todayBtn: true,
            language: "zh-CN"
        });
        
    });
</script>