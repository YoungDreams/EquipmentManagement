@using PensionInsurance.Entities
@using PensionInsurance.Shared
@using PensionInsurance.Web.Common;
@model PensionInsurance.Web.Views.SystemSetting.ProjectServicePackCatalog.IndexViewModel

<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">系统设置管理</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="@Url.Action("Index","Project", new {ProjectId = Model.Query.ProjectId })">项目信息管理</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>服务项目管理</span>
            </li>
        </ul>
    </div>
}
<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>服务项目查询
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="@Url.Action("Index","ProjectServicePackCatalog")" class="form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label col-md-3">服务项目名称</label>
                                    <div class="col-md-9">
                                        @Html.InputText(m => m.Query.Name)
                                    </div>
                                    @Html.HiddenFor(m => m.Query.ProjectId)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="text-center">
                            <button type="submit" class="btn green btn-sm padding-lf-15 ">查询</button>
                            <a href="@Url.Action("Index", "Project")" class="btn yellow btn-sm padding-lf-15">返回上一页</a>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>
<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">服务项目列表</span>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>服务项目编码</th>
                                <th>服务项目名称</th>
                                <th>归属类别</th>
                                <th>是否启用</th>
                                <th>单次价格</th>
                                <th>服务说明</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.ProjectServicePackCatalogs)
                        {
                            <tr>
                                <td align="center">@Model.ProjectServicePackCatalogs.RowNumberOf(item)</td>
                                <td>@item.ServicePackCatalog.ServicePackCatalogNo</td>
                                <td>@item.ServicePackCatalog.Name</td>
                                <td>@item.ServicePackCatalog.Type</td>
                                <th>@if (item.IsEnabled)
                                    {
                                        <span>是</span>
                                }
                                else
                                {
                                    <span>否</span>
                                }</th>
                                <td>@item.UnitPrice</td>
                                <td>@item.Remark</td>
                                <td>
                                    @if (PensionInsurance.Shared.WebAppContext.Current.User.HasPermission(ModuleType.服务项目管理, Permission.编辑))
                                    {
                                        <a href="@Url.Action("Edit", "ProjectServicePackCatalog", new {id = item.Id})" class="btn default btn-xs yellow-stripe">编辑</a>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                    @Html.Partial("_Pagination", Model.ProjectServicePackCatalogs)
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/clockface/js/clockface.js") type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <!-- END THEME GLOBAL SCRIPTS -->
}