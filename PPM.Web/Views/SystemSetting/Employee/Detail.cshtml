@using PensionInsurance.Entities
@using PensionInsurance.Shared
@using PensionInsurance.Web.Common
@model PensionInsurance.Web.Views.SystemSetting.Employee.DetailViewModel
@section Styles{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/css/bootstrap-timepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/clockface/css/clockface.css") rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
}
<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="@Url.Action("Index","Employee")">人事资料</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>编辑</span>
            </li>
        </ul>
    </div>
}
<!-- END PAGE BAR -->
<div class="full-height-content-body">
    <form data-ajax="true" action="@Url.Action("Edit", "Employee")" method="POST" class="form-horizontal">
        <div class="portlet light portlet-fit portlet-form protlet-border">
            <div class="portlet-title title-style">
                <div class="caption">
                    <i class="icon-bubble font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp sbold">基本信息</span>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">姓名</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.EmployeeName, Model.EmployeeName)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">证件类型</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.IDCardType, Model.IDCardType.ToString())
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">证件号码</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.IDCard, Model.IDCard)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">户口性质</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.HouseholdType, Model.HouseholdType.ToString() ?? string.Empty)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">性别</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.Sex, Model.Sex.ToString())
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">年龄</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.Age, Model.Age.ToString() ?? string.Empty)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">出生日期</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.Birthday, Model.Birthday.DateString() ?? string.Empty)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">联系电话</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.PhoneNumber, Model.PhoneNumber ?? string.Empty)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">婚姻情况</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.MaritalStatus, Model.MaritalStatus.ToString())
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">子女情况</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.ChildrenStatus, Model.ChildrenStatus ?? string.Empty)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">最高学历</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.HighestQualifications, Model.HighestQualifications.ToString())
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="portlet-title title-style">
                <div class="caption">
                    <i class="icon-bubble font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp sbold">薪酬信息</span>
                </div>
            </div>

            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">首次入职日期</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.FirstArrivaledDate, Model.FirstArrivaledDate.DateString() ?? string.Empty)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">项目</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.ProjectName, Model.ProjectName)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">部门</label>
                                <div class="col-md-7">
                                    @Html.HiddenFor(x => x.Id)
                                    @Html.HiddenFor(x => x.DepartmentId)
                                    @Html.LabelFor(m => m.DepartmentName, Model.DepartmentName)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">岗位</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.JobTypeName, Model.JobTypeName)
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">职级</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.JobLevel, Model.JobLevel)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">是否储备</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.ReserveStatus, Model.ReserveStatus.ToString())
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">劳动合同类型</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.JobContractType, Model.JobContractType.ToString())
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">试用期</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.Probation, Model.Probation.ToString() ?? string.Empty)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">试用期固定工资</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.ProbationPeriodFixedCost, Model.ProbationPeriodFixedCost.FormatString())
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">试用期浮动工资</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.ProbationPeriodSlidingCost, Model.ProbationPeriodSlidingCost.FormatString())
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">转正固定工资</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.PromotionFixedCost, Model.PromotionFixedCost.FormatString())
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">转正浮动工资</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.PromotionSlidingCost, Model.PromotionSlidingCost.FormatString())
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">保险缴纳类型</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.InsuranceType, Model.InsuranceType.ToString())
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-5">其他福利</label>
                                <div class="col-md-7">
                                    @Html.LabelFor(m => m.OtherWelfareType, Model.OtherWelfareType.ToString())
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.CurrentWorkFlowStep != null)
            {
                @Html.Partial("~/Views/SystemSetting/Employee/_Approval.cshtml", Model)
            }
            else
            {
                @Html.Partial("~/Views/TrackingResult/_TrackingResults.cshtml", Model.TrackingResult)
            }
        </div>
        <div class="errors alert alert-danger fade in" style="display: none;"></div>
        <div class="form-actions">
            <div class="text-center">
                @if (Model.Status == EntryStatus.待审批 && Model.CurrentWorkFlowStep != null && WebAppContext.Current.User == Model.CurrentWorkFlowStep.User)
                {
                    <a href="javascript:;" id="ApprovalEmloyee" class="btn green btn-sm padding-lf-15">提交</a>
                }
                <button type="button" class="btn yellow btn-sm padding-lf-15 " onclick="javascript: history.back(-1);">返回上一页</button>
            </div>
        </div>
    </form>

</div>
@section Scripts{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js") type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/clockface/js/clockface.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#IDCard").blur(function () {
                var idCard = $("#IDCard").val();
                var cardType = $("select[name='IDCardType']").val();
                if (cardType == '@IDCardType.身份证' && idCard != "") {
                    $.get("@Url.Action("GetSex", "Employee")" + "?idCard=" + idCard, function (result) {
                        if (result.success) {
                            $("select[name='Sex']").val(result.Sex);
                            $("input[name=Birthday]").val(result.Birthday);
                            $("input[name=Age]").val(result.Age);
                        }
                    });
                }
            });

            //审批保存
            $("#ApprovalEmloyee").on("click", function() {
                $("#Description").text();
                var url = '@Url.Action("Approval", "Employee")';
                var employeeId = @Model.Id ;
                var result = $("input[name='Result']:checked").val();
                var description = $('#Description').val();
                var currentWorkflowStepId = @Model.CurrentWorkflowStepId;
                if (typeof result == "undefined") {
                    result = "";
                }
                var command = {
                    EmployeeId: employeeId,
                    Result: result,
                    Description: description,
                    CurrentWorkflowStepId: currentWorkflowStepId
                };
                postCommand(url, command, $(this));
                return false;
            });
        });
    </script>
}