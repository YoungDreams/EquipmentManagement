@using PensionInsurance.Entities
@using PensionInsurance.Web.Common
@model PensionInsurance.Web.Views.SystemSetting.Employee.AdjustViewModel
@section Styles{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/css/bootstrap-timepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/clockface/css/clockface.css") rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
}
<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="@Url.Action("Index","Employee")">人事资料</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>员工调动</span>
            </li>
        </ul>
    </div>
}
<!-- END PAGE BAR -->
<div class="full-height-content-body">
    <form data-ajax="true" action="@Url.Action("Adjust", "Employee")" method="POST" class="form-horizontal">
        <div class="portlet light portlet-fit portlet-form protlet-border">
            <div class="portlet-title title-style">
                <div class="caption">
                    <i class="icon-bubble font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp sbold">基本信息</span>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    @Html.HiddenFor(x => x.EmployeeId)
                    @Html.HiddenFor(x => x.OriginalProjectId)
                    @Html.HiddenFor(x => x.OriginalDepartmentId)
                    @Html.HiddenFor(x => x.OriginalJobTypeId)
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">姓名</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Employee.EmployeeName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">工号</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Employee.EmployeeNo, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">证件类型</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Employee.IDCardType, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">证件号码</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Employee.IDCard, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="portlet-title title-style">
                <div class="caption">
                    <i class="icon-bubble font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp sbold">调动信息</span>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">调动类型</label>
                                <div class="col-md-8">
                                    @Html.EnumTextDropDownListFor(m => m.AdjustType, typeof(AdjustType), true)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">生效日期</label>
                                <div class="col-md-8">
                                    @Html.InputDate(m => m.EffectiveDate)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">原项目</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Employee.Project.Name, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">原部门</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Employee.Department.Name, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">原岗位</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Employee.JobType.Name, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">新项目</label>
                                <div class="col-md-8">
                                    @Html.InputDropDown(x => Model.NewProjectId, Model.Projects, true)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">新部门</label>
                                <div class="col-md-8">
                                    <select id="NewDepartmentId" name="NewDepartmentId" class="form-control input-small">
                                        <option value="">--未选择--</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">新岗位</label>
                                <div class="col-md-8">
                                    <select id="NewJobTypeId" name="NewJobTypeId" class="form-control input-small">
                                        <option value="">--未选择--</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 5px;">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-1">备注</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <div class="errors alert alert-danger fade in" style="display: none;"></div>
        <div class="form-actions">
            <div class="text-center">

                <button type="submit" class="btn green btn-sm padding-lf-15 ">提交</button>

                <button type="button" class="btn yellow btn-sm padding-lf-15 " onclick="javascript: history.back(-1);">返回上一页</button>
            </div>
        </div>
    </form>

</div>
@section Scripts{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js") type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/clockface/js/clockface.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //项目编号获取部门信息
            $("#NewProjectId").change(function () {
                bindData();
                var projectId = $("select[name='NewProjectId']").val();
                if (projectId == '@Model.Employee.Project.Id') {
                    $("#AdjustType").val('@AdjustType.项目内调动');
                } else {
                    $("#AdjustType").val('@AdjustType.跨项目调动');
                }
            });

            $("#AdjustType").blur(function () {
                var type = $("#AdjustType").val();
                if (type == '@AdjustType.项目内调动' && type != "") {
                    $("select[name='NewProjectId']").val("@Model.Employee.Project.Id");
                    $("select[name='NewProjectId']").attr("readonly", "readonly");
                    bindData();
                } else {
                    $("select[name='NewProjectId']").val('');
                    $("#NewDepartmentId").empty();
                    $("#NewJobTypeId").empty();
                    $("select[name='NewProjectId']").attr("readonly", false);
                }
            });
        });

        function bindData() {
            var projectId = $("select[name='NewProjectId']").val();
            $("#NewDepartmentId").empty();
            $("<option></option>").val("").text("--请选择--").appendTo($("#NewDepartmentId"));
            $("#NewJobTypeId").empty();
            $("<option></option>").val("").text("--请选择--").appendTo($("#NewJobTypeId"));
            if (projectId != "") {
                $.get("@Url.Action("GetDepartmentsByProjectId", "Employee")" + "?projectId=" + projectId, function (result) {
                    $.each(result, function (i, item) {
                        $("<option></option>").val(item["Value"]).text(item["Text"]).appendTo($("#NewDepartmentId"));
                    });
                });
                $.get("@Url.Action("GetJobOccupationByProjectId", "Employee")" + "?projectId=" + projectId, function (result) {
                    $.each(result, function (i, item) {
                        $("<option></option>").val(item["Value"]).text(item["Text"]).appendTo($("#NewJobTypeId"));
                    });
                });
            }
        }
    </script>
}