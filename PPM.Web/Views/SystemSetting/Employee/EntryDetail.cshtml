                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">部门</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.DepartmentName, new { @class = "form-control", @readonly = "readonly" })

                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">岗位</label>
                                <div class="col-md-8">
                                    @Html.HiddenFor(x => x.JobTypeId)
                                    @Html.InputText(m => m.JobTypeName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">职级</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.JobLevel, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">劳动合同类型</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.JobContractType, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">试用期</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Probation, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">工作制类型</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.WorkHourType, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">试用期固定工资</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.ProbationPeriodFixedCost, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">试用期浮动工资</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.ProbationPeriodSlidingCost, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">转正固定工资</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.PromotionFixedCost, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">转正浮动工资</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.PromotionSlidingCost, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">是否储备</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.ReserveStatus, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">保险缴纳类型</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.InsuranceType, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">其他福利</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.OtherWelfareType, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet-title title-style">
                <div class="caption">
                    <i class="icon-bubble font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp sbold">学历信息</span>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">第一学历</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.FirstQualifications, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">第一学历毕业院校</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.FirstQualificationsSchool, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">第一学历专业</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.FirstQualificationsProfessional, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">最高学历</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.HighestQualifications, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">最高学历毕业院校</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.HighestQualificationsSchool, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">最高学历专业</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.HighestQualificationsProfessional, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">资格证书</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Qualification, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">考勤卡号</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.AttendanceNo, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">户口所在地</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.HouseholdAddress, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">紧急联系人</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.UrgentContactor, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">紧急联系人关系</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.UrgentContactorRelation, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">紧急联系人电话</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.UrgentContactorPhoneNumber, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 5px;">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-1">备注</label>
                                <div class="col-md-11">
                                    @Html.InputText(m => m.Description, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.CurrentWorkFlowStep != null)
            {
                @Html.Partial("~/Views/SystemSetting/Employee/_EntryApproval.cshtml", Model)
            }
            else
            {
                @Html.Partial("~/Views/TrackingResult/_TrackingResults.cshtml", Model.TrackingResult)
            }
        </div>
        <div class="errors alert alert-danger fade in" style="display: none;"></div>
        <div class="form-actions">
            <div class="text-center">
                @if (Model.Status == EntryStatus.待入职 && Model.CurrentWorkFlowStep != null && WebAppContext.Current.User == Model.CurrentWorkFlowStep.User)
                {
                    <a href="javascript:;" id="ApprovalEntryEmloyee" class="btn green btn-sm padding-lf-15">提交</a>
                }
                <button type="button" class="btn yellow btn-sm padding-lf-15 " onclick="javascript: history.back(-1);">返回上一页</button>
            </div>
        </div>
    </form>

</div>
@section Scripts{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js") type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/clockface/js/clockface.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#IDCard").blur(function () {
                var idCard = $("#IDCard").val();
                var cardType = $("select[name='IDCardType']").val();
                if (cardType == '@IDCardType.身份证' && idCard != "") {
                    $.get("@Url.Action("GetSex", "Employee")" + "?idCard=" + idCard, function (result) {
                        if (result.success) {
                            $("select[name='Sex']").val(result.Sex);
                            $("input[name=Birthday]").val(result.Birthday);
                            $("input[name=Age]").val(result.Age);
                        }
                    });
                }
            });

            //审批保存
            $("#ApprovalEntryEmloyee").on("click", function() {
                $("#Description").text();
                var url = '@Url.Action("EntryApproval", "Employee")';
                var employeeId = @Model.Id ;
                var result = $("input[name='Result']:checked").val();
                var description = $('#Description').val();
                var currentWorkflowStepId = @Model.CurrentWorkflowStepId;
                if (typeof result == "undefined") {
                    result = "";
                }
                var command = {
                    EmployeeId: employeeId,
                    Result: result,
                    Description: description,
                    CurrentWorkflowStepId: currentWorkflowStepId
                };
                postCommand(url, command, $(this));
                return false;
            });

        });
    </script>
}