@using PensionInsurance.Entities
@using PensionInsurance.Web.Common
@model PensionInsurance.Web.Views.SystemSetting.Employee.EntryViewModel
@section Styles{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/css/bootstrap-timepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/clockface/css/clockface.css") rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
}
<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="@Url.Action("Index","Employee")">人事资料</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>入职办理</span>
            </li>
        </ul>
    </div>
}
<!-- END PAGE BAR -->
<div class="full-height-content-body">
    <form data-ajax="true" action="@Url.Action("Entry", "Employee")" method="POST" class="form-horizontal">
        <div class="portlet light portlet-fit portlet-form protlet-border">
            <div class="portlet-title title-style">
                <div class="caption">
                    <i class="icon-bubble font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp sbold">基本信息</span>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.DepartmentId)
                    @Html.HiddenFor(x => x.Status)
                    @Html.HiddenFor(x => x.WorkflowCategory)
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">姓名</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.EmployeeName, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">工号</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.EmployeeNo, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">证件类型</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.IDCardType, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">证件号码</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.IDCard, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">性别</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Sex, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">年龄</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Age, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">出生日期</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="@Model.Birthday.DateString()" readonly>
                                    @Html.HiddenFor(x => x.Birthday)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">联系电话</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.PhoneNumber)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">婚姻情况</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.MaritalStatus, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">子女情况</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.ChildrenStatus, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">邮箱</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Email)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">现住址</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Address)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">户口性质</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.HouseholdType, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">首次参加工作时间</label>
                                <div class="col-md-8">
                                    @Html.InputDate(m => m.FirstWorkDate)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">养老行业从业时间</label>
                                <div class="col-md-8">
                                    @Html.InputDate(m => m.NursingDate)
                                </div>
                            </div>
                        </div>
                        

                    </div>
                </div>
            </div>

            <div class="portlet-title title-style">
                <div class="caption">
                    <i class="icon-bubble font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp sbold">薪酬信息</span>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">首次入职日期</label>
                                <div class="col-md-8">
                                    @Html.InputDate(m => m.FirstArrivaledDate)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">项目</label>
                                <div class="col-md-8">
                                    @Html.HiddenFor(x => x.ProjectId)
                                    @Html.InputText(m => m.ProjectName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">部门</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.DepartmentName, new { @class = "form-control", @readonly = "readonly" })

                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">岗位</label>
                                <div class="col-md-8">
                                    @Html.HiddenFor(x => x.JobTypeId)
                                    @Html.InputText(m => m.JobTypeName, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">职级</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.JobLevel, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">劳动合同类型</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.JobContractType, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">试用期</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Probation, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">工作制类型</label>
                                <div class="col-md-8">
                                    @Html.EnumTextDropDownListFor(m => m.WorkHourType, typeof(WorkHourType), true)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">试用期固定工资</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.ProbationPeriodFixedCost, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">试用期浮动工资</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.ProbationPeriodSlidingCost, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">转正固定工资</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.PromotionFixedCost, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">转正浮动工资</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.PromotionSlidingCost, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">是否储备</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.ReserveStatus, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">保险缴纳类型</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.InsuranceType, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">其他福利</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.OtherWelfareType, new {@class = "form-control", @readonly = "readonly"})
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet-title title-style">
                <div class="caption">
                    <i class="icon-bubble font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp sbold">学历信息</span>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">第一学历</label>
                                <div class="col-md-8">
                                    @Html.EnumTextDropDownListFor(m => m.FirstQualifications, typeof(QualificationsType), true)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">第一学历毕业院校</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.FirstQualificationsSchool)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">第一学历专业</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.FirstQualificationsProfessional)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">最高学历</label>
                                <div class="col-md-8">
                                    @Html.EnumTextDropDownListFor(m => m.HighestQualifications, typeof(QualificationsType), true)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">最高学历毕业院校</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.HighestQualificationsSchool)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">最高学历专业</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.HighestQualificationsProfessional)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">资格证书</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.Qualification)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">考勤卡号</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.AttendanceNo)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">户口所在地</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.HouseholdAddress)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">紧急联系人</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.UrgentContactor)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">紧急联系人关系</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.UrgentContactorRelation)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">紧急联系人电话</label>
                                <div class="col-md-8">
                                    @Html.InputText(m => m.UrgentContactorPhoneNumber)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 5px;">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-1">备注</label>
                                <div class="col-md-11">
                                    @Html.InputText(m => m.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="errors alert alert-danger fade in" style="display: none;"></div>
        <div class="form-actions">
            <div class="text-center">
                @if (Model.Status == EntryStatus.待入职)
                {
                    <button type="submit" class="btn green btn-sm padding-lf-15 ">提交</button>
                }
                <button type="button" class="btn yellow btn-sm padding-lf-15 " onclick="javascript: history.back(-1);">返回上一页</button>
            </div>
        </div>
    </form>

</div>
@section Scripts{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js") type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/clockface/js/clockface.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#IDCard").blur(function () {
                var idCard = $("#IDCard").val();
                var cardType = $("select[name='IDCardType']").val();
                if (cardType == '@IDCardType.身份证' && idCard != "") {
                    $.get("@Url.Action("GetSex", "Employee")" + "?idCard=" + idCard, function (result) {
                        if (result.success) {
                            $("select[name='Sex']").val(result.Sex);
                            $("input[name=Birthday]").val(result.Birthday);
                            $("input[name=Age]").val(result.Age);
                        }
                    });
                }
            });
        });
    </script>
}