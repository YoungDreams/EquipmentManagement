@using PensionInsurance.Entities
@using PensionInsurance.Shared
@using PensionInsurance.Web.Common
@model PensionInsurance.Web.Views.SystemSetting.Employee.IndexViewModel
<!-- BEGIN PAGE BAR -->
@section Styles{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/clockface/css/clockface.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap-select/css/bootstrap-select.min.css") rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
}
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="@Url.Action("Index", "Employee")">人事资料</a>
            </li>
        </ul>
    </div>
}
<!-- END PAGE BAR -->
<div class="row">
    <div class="col-md-12">
        <div class="portlet" style="margin-top: 10px;">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>人事资料
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="" class="form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">部门</label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(x => x.Query.DepartmentIds, Model.Departments, new { multiple = "", @class = "selectpicker" })
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">工号</label>
                                    <div class="col-md-9">
                                        @Html.InputText(m => m.Query.EmployeeNo)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">姓名</label>
                                    <div class="col-md-9">
                                        @Html.InputText(m => m.Query.EmployeeName)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">性别</label>
                                    <div class="col-md-9">
                                        @Html.EnumTextDropDownListFor(m => m.Query.Sex, typeof(Sex), true)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                        <div class="row">

                            <!--/span-->
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">状态</label>
                                    <div class="col-md-9">
                                        @Html.EnumTextDropDownListFor(x => x.Query.Status, typeof(EntryStatus), new { multiple = "", @class = "selectpicker" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">职位</label>
                                    <div class="col-md-9">
                                        @Html.DropDownListFor(x => x.Query.JobTypes, Model.JobTypes, new { multiple = "", @class = "selectpicker" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">入职时间</label>
                                    <div class="col-md-9">
                                        <div class="input-group date-picker input-daterange" data-date="2016-05-05" data-date-format="yyyy-mm-dd">
                                            @Html.InputText(m => m.Query.ArrivaledStartTime)
                                            <span class="input-group-addon"> 到 </span>
                                            @Html.InputText(m => m.Query.ArrivaledEndTime)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">离职时间</label>
                                    <div class="col-md-9">
                                        <div class="input-group date-picker input-daterange" data-date="2016-05-05" data-date-format="yyyy-mm-dd">
                                            @Html.InputText(m => m.Query.LeaveOfficeStartTime)
                                            <span class="input-group-addon"> 到 </span>
                                            @Html.InputText(m => m.Query.LeaveOfficeEndTime)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-offset-6">
                                        <button type="submit" class="btn green">查询</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6"> </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">人事资料</span>
                </div>
                <div class="actions">
                    @if (WebAppContext.Current.User.HasPermission(ModuleType.人事资料, Permission.新增))
                    {
                        <div class="btn-group">
                            <a class="btn btn-sm green dropdown-toggle" href="javascript:;" data-toggle="dropdown" aria-expanded="false">
                                新增
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a href="@Url.Action("Create", "Employee" ,new {workflowCategory=WorkflowCategory.项目新员工入职})">
                                        <i class="fa fa-plus"></i> @WorkflowCategory.项目新员工入职
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Create", "Employee" ,new {workflowCategory=WorkflowCategory.项目经理级新员工入职})">
                                        <i class="fa fa-plus"></i> @WorkflowCategory.项目经理级新员工入职
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Create", "Employee" ,new {workflowCategory=WorkflowCategory.公寓总经理新员工入职})">
                                        <i class="fa fa-plus"></i> @WorkflowCategory.公寓总经理新员工入职
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Create", "Employee" ,new {workflowCategory=WorkflowCategory.大区总监级新员工储备入职})">
                                        <i class="fa fa-plus"></i> @WorkflowCategory.大区总监级新员工储备入职
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>

            <div class="portlet-body">
                <div class="table">
                    <table class="table table-hover table-scrollable">
                        <thead>
                            <tr>
                                <th> 部门 </th>
                                <th> 工号 </th>
                                <th> 姓名 </th>
                                <th> 性别 </th>
                                <th> 状态 </th>
                                <th> 职位 </th>
                                <th> 操作 </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Department.Name</td>
                                    <td>@item.EmployeeNo</td>
                                    <td>@item.EmployeeName</td>
                                    <td>@item.Sex</td>
                                    <td>@item.Status</td>
                                    <td>@item.JobType.Name</td>
                                    <td>
                                        @if (WebAppContext.Current.User.HasPermission(ModuleType.人事资料, Permission.查看))
                                        {
                                            if (item.Status == EntryStatus.已入职 || item.Status == EntryStatus.已离职)
                                            {
                                                <a href="@Url.Action("EntryDetail", "Employee", new {id = item.Id})" class="btn default btn-xs yellow-stripe">查看</a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Detail", "Employee", new {id = item.Id})" class="btn default btn-xs yellow-stripe">查看</a>
                                            }
                                        }
                                        @if (item.Status == EntryStatus.待入职 && WebAppContext.Current.User.HasPermission(ModuleType.人事资料, Permission.员工入职))
                                        {
                                            <a href="@Url.Action("Entry", "Employee", new {id = item.Id})" class="btn default btn-xs blue-stripe">入职</a>
                                        }
                                        @if (item.Status == EntryStatus.已入职 && WebAppContext.Current.User.HasPermission(ModuleType.人事资料, Permission.员工调动))
                                        {
                                            <a href="@Url.Action("Adjust", "Employee", new {id = item.Id})" class="btn default btn-xs blue-stripe">调动</a>
                                        }
                                        @if (WebAppContext.Current.User.HasPermission(ModuleType.人事资料, Permission.删除))
                                        {
                                            <a href="javascript:;" data-command="@Model.DeleteCommand(item.Id,null).ToJavascript()" class="btn default btn-xs red-stripe">删除</a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.Partial("_Pagination", Model.Items)
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/clockface/js/clockface.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            $('.selectpicker').selectpicker({
                style: 'btn-xs',
                iconBase: 'fa',
                tickIcon: 'fa-check',
                noneSelectedText: "--未选择--"
            });
            $("select[name='Query.DepartmentIds']").val(@Html.Raw(Json.Encode(Model.Query.DepartmentIds)));
            $("select[name='Query.JobTypes']").val(@Html.Raw(Json.Encode(Model.Query.JobTypes?.Select(x => x.ToString()))));
            $("select[name='Query.Status']").val(@Html.Raw(Json.Encode(Model.Query.Status?.Select(x => x.ToString()))));
            $('.selectpicker').selectpicker('refresh');

        });


    </script>
}