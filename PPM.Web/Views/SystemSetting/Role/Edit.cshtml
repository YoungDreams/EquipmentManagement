@using PensionInsurance.Entities
@model PensionInsurance.Web.Views.SystemSetting.Role.EditViewModel

<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">系统设置</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a href="javascript:;">角色编辑</a>
            </li>            
        </ul>
    </div>
}

<!-- END PAGE BAR -->
<div class="full-height-content full-height-content-scrollable">
    <div class="full-height-content-body">
        <form data-ajax="true" action="@Url.Action("Edit", "Role")" method="POST" class="form-horizontal">
            <div class="portlet box green" style="margin-top: 10px;">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i>角色信息
                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <div class="form-body text-center">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-2">
                                <div class="form-group">
                                    <label class="text-right col-md-3">类型</label>
                                    <div class="col-md-9">
                                        <select name="RoleType" class="form-control input-small">
                                            @foreach (var item in Enum.GetValues(typeof(RoleType)))
                                            {
                                                if ((RoleType)item == Model.RoleType)
                                                {
                                                    <option selected="selected">@item.ToString()</option>
                                                }
                                                else
                                                {
                                                    <option>@item.ToString()</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->

                        </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-2">
                                <div class="form-group">
                                    <label class="text-right col-md-3 ">名称</label>
                                    <div class="col-md-9">
                                        <input type="text" value="@Model.RoleName" class="form-control" name="Name"/>
                                    </div>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-2">
                                <div class="form-group">
                                    <label class="text-right col-md-3">描述</label>
                                    <div class="col-md-9">
                                        <input type="text" value="@Model.Description" class="form-control" name="Description"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="errors alert alert-danger fade in" style="display: none;"></div>

                        <!--/row-->
                        <div class="row text-center">
                            <div class="col-md-12">
                                @Html.HiddenFor(x=>x.RoleId)
                                <button type="submit" class="btn green btn-sm padding-lf-15">保存</button>
                                <button type="button" class="btn yellow btn-sm padding-lf-15" onclick="javascript: history.back(-1);">返回上一页</button>
                            </div>
                        </div>
                        <!-- END FORM-->

                    </div>
                    <!-- END FORM-->
                </div>
            </div>
        </form>
    </div>
</div>
