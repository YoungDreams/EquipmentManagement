@model PensionInsurance.Web.Views.CustomerOrderFood.PayOrderFoodViewModel

<form id="customer-order-food-pay-form" data-ajax="true" action="@Url.Action("Pay", "CustomerOrderFood")" method="POST" class="form-horizontal">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bubble font-green-sharp"></i>
                <span class="caption-subject font-green-sharp sbold">付款</span>
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">项目</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="CustomerName" value="@Model.ProjectName" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">客户姓名</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="CustomerName" value="@Model.CustomerName" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">餐饮类型</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="ServicePackCatalogName" value="@Model.ServicePackCatalogName" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">付款方式</label>
                            <div class="col-md-10">
                                <span>@Model.PaymentType.ToString()</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">账单金额</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="Total" value="@Model.Total" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">已缴金额</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="PaidMoney" value="@Model.PaidMoney" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">未缴金额</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="UnPaidMoney" value="@Model.UnPaidMoney" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">待确认金额</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="WaitConfirmMoney" value="@Model.WaitConfirmMoney" readonly>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-2">本次缴费金额</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" name="PayMoney">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="errors alert alert-danger fade in" style="display: none;"></div>
                <input type="hidden" name="ServicePackCatalogId" value="@Model.ServicePackCatalogId"/>
                <input type="hidden" name="PaymentType" value="@Model.PaymentType.ToString()"/>
                <input type="hidden" name="ConsultingOrderFoodId" value="@Model.ConsultingOrderFoodId" />
                <input type="hidden" name="UserId" value="@Model.UserId" />
                <!-- END FORM-->
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function () {
    });
</script>