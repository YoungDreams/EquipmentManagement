@using PensionInsurance.Entities
@using PensionInsurance.Shared
@using PensionInsurance.Web.Common
@model PensionInsurance.Web.Views.NewPurchase.PurchaseSelectViewModel

<form id="purchase-select-project-form" data-ajax="true" action="@Url.Action("Select", "NewPurchase")" method="POST" class="form-horizontal">
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-bubble font-green-sharp"></i>
                <span class="caption-subject font-green-sharp sbold">采购商品</span>
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <div class="form-body">
                <div class="row">
                    <!--/span-->
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-3">选择项目</label>
                            <div class="col-md-9">
                                @Html.InputDropDown(x => Model.ProjectId, Model.ProjectList)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!--/span-->
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-3">选择类型</label>
                            <div class="col-md-9">
                                <select class="form-control input-small" name="OrderType" id="OrderType">
                                    <option value="">--未选择--</option>
                                    @if (WebAppContext.Current.User.HasPermission(ModuleType.采购管理, Permission.计划采购))
                                    {
                                        <option>@OrderType.计划采购单</option>
                                    }
                                    @if (WebAppContext.Current.User.HasPermission(ModuleType.采购管理, Permission.运营紧急采购))
                                    {
                                        <option>@OrderType.运营紧急采购</option>
                                    }
                                    @if (WebAppContext.Current.User.HasPermission(ModuleType.采购管理, Permission.食材采购))
                                    {
                                        <option>@OrderType.食材采购单</option>
                                    }
                                    @if (WebAppContext.Current.User.HasPermission(ModuleType.采购管理, Permission.食材紧急采购))
                                    {
                                        <option>@OrderType.食材紧急采购</option>
                                    }
                                    @if (WebAppContext.Current.User.HasPermission(ModuleType.采购管理, Permission.餐饮部计划采购))
                                    {
                                        <option>@OrderType.餐饮部计划采购</option>
                                    }
                                    @if (WebAppContext.Current.User.HasPermission(ModuleType.采购管理, Permission.营销类计划性采购))
                                    {
                                        <option>@OrderType.营销类计划性采购</option>
                                    }
                                    @if (WebAppContext.Current.User.HasPermission(ModuleType.采购管理, Permission.营销类特殊性采购))
                                    {
                                        <option>@OrderType.营销类特殊性采购</option>
                                    }
                                    @if (WebAppContext.Current.User.HasPermission(ModuleType.采购管理, Permission.营销类紧急性采购))
                                    {
                                        <option>@OrderType.营销类紧急性采购</option>
                                    }
                                    @if (WebAppContext.Current.User.HasPermission(ModuleType.采购管理, Permission.固定资产采购))
                                    {
                                        <option>@OrderType.固定资产采购</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="errors alert alert-danger fade in" style="display: none;"></div>
            </div>
        </div>
    </div>
</form>

<script>
    $(document).ready(function () {
    });
</script>