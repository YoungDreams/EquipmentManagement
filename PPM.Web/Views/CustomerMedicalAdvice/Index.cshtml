@using PensionInsurance.Entities
@using PensionInsurance.Shared
@using PensionInsurance.Web.Common;
@model PensionInsurance.Web.Views.CustomerMedicalAdvice.IndexViewModel
<!-- BEGIN PAGE BAR -->
@section Breadcrumb{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <span>客户医嘱管理</span>
            </li>
        </ul>
    </div>
}
<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <div class="portlet">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>客户医嘱查询
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="@Url.Action("Index","CustomerMedicalAdvice")" class="form-horizontal">
                    <div class="form-body">
                        <div class="row">

                            <!--/span-->
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">客户名称</label>
                                    <div class="col-md-9">
                                        @Html.InputText(m => m.Query.Name)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">项目</label>
                                    <div class="col-md-9">
                                        @Html.InputDropDown(x => Model.Query.ProjectId, Model.Projects, true)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">开始日期</label>
                                    <div class="col-md-9">
                                        <div class="input-group date-picker input-daterange" data-date-format="yyyy-mm-dd">
                                            @Html.InputText(m => m.Query.StartTime)
                                            <span class="input-group-addon"> 到 </span>
                                            @Html.InputText(m => m.Query.EndTime)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label col-md-3">状态</label>
                                    <div class="col-md-9">
                                        @Html.InputDropDownEnum(m => m.Query.MedicalAdviceStatus, typeof(MedicalAdviceStatus),true)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="text-center">
                            <button type="submit" class="btn green btn-sm padding-lf-15 ">查询</button>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>
<div class="row" style="margin-top: 10px;">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">客户医嘱列表</span>
                </div>
            </div>
            <div class="portlet-body">
                <div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>客户名称</th>
                                <th>项目</th>
                                <th>医嘱类型</th>
                                <th>开始日期</th>
                                <th>医嘱内容</th>
                                <th>是否药品</th>
                                <th>填开医生</th>
                                <th>状态</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CustomerMedicalAdvices)
                            {
                                <tr>
                                    <td>@Model.CustomerMedicalAdvices.RowNumberOf(item)</td>
                                    <td>@item.CustomerAccount.Customer.Name</td>
                                    <td>
                                        @{
                                        var projectName = item.CustomerAccount.Project == null ? "" : item.CustomerAccount.Project.Name;
                                    }@projectName
                                </td>
                                <td>@item.MedicalAdviceType</td>
                                <td>@item.StartTime.Value</td>
                                <td>@item.MedicalAdviceContent</td>
                                <td>
                                    @{
                                    var isDrugs = "否";
                                    if (item.IsDrugs)
                                    {
                                        isDrugs = "是";
                                    }
                                }@isDrugs
                            </td>
                            <td>@item.StartDoctor.RealName</td>
                            <td>@item.Status</td>
                                </tr>
                                    }
                        </tbody>
                    </table>
                    @Html.Partial("_Pagination", Model.CustomerMedicalAdvices)
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src=@Url.Content("~/assets/global/plugins/moment.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/clockface/js/clockface.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/scripts/app.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/global/plugins/select2/js/select2.full.min.js") type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).on("click",
                ".customer-pay",
                function () {
                    var $this = $(this);
                    var paymentType = $this.attr("data-payment-type");
                    var cashPayFoodId = $this.attr("data-id");
                    App.dialog('#customer-order-food-pay-form',
                        '@Url.Action("GetPay", "CustomerOrderFood")' +
                        '?id=' +
                        cashPayFoodId +
                        '&paymentType=' +
                        paymentType,
                        'col-md-8 col-md-offset-2');
                });
        });

        $('#StartTime').datetimepicker({
            autoclose: true,
            todayBtn: true,
            language: "zh-CN"
        });
    </script>
}