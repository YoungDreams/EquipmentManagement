    Layout = null;
}
@model PPM.Web.Views.Account.LogOnViewModel
<html>
<head>
    <meta charset="utf-8" />
    <title>欢迎登录惠齐电力设备管理系统</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <link href=@Url.Content("~/assets/global/plugins/bootstrap/css/bootstrap.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/weui/weui.css") rel="stylesheet" type="text/css" />
    @*<link rel="shortcut icon" href="favicon.ico" />*@
    <style>
        h1 {
            text-align: center;
            margin-top: 2rem;
        }

        h1 {
            text-align: center;
            margin-top: 3rem;
        }

        .cont_width {
            margin-top: 5rem;
        }

        .weui-cell {
            border: solid 1px #eee;
            width: 80%;
            margin: 0 auto;
            margin-top: 0.5rem;
            padding: 0;
            border-radius: 0.2rem;
        }

        .weui-label {
            width: 50px;
            text-align: center;
            padding: 0.6rem 0;
        }

        .weui-cell:before {
            border: 0;
        }

        .weui-agree {
            width: 80%;
            margin: 0 auto;
            padding: 1rem 0;
        }

        .weui-agree__checkbox {
            margin-right: 0.5rem;
            width: 20px;
            height: 20px;
        }

            .weui-agree__checkbox:checked:before {
                color: #3498db;
                font-size: 18px;
            }

        .weui-btn_primary {
            width: 80%;
            margin: 0 auto;
            margin-top: 2rem;
        }

        .weui-input {
            border-left: solid 1px #eee;
            height: 3rem;
            padding-left: 0.5rem;
            color: #000;
        }
    </style>
</head>
<!-- END HEAD -->
<body>

    <!-- END LOGO -->
