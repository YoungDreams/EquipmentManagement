    <h1>
        <img src="@Url.Content("~/assets/pages/img/logo.jpg")" title="惠齐电力智能云平台" alt="惠齐电力智能云平台" width="85%">
    </h1>
    <div class="cont_width">
        <form class="login-form" data-ajax="true" method="POST">
            <div class="weui-cell">
                <div class="weui-cell__hd">
                    <label class="weui-label"><img src="@Url.Content("~/assets/pages/img/icon1.jpg")" width="60%"></label>
                </div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="text" autofocus="autofocus" id="UserName" name="UserName" placeholder="用户名">
                </div>
            </div>
            <div class="weui-cell">
                <div class="weui-cell__hd">
                    <label class="weui-label"><img src="@Url.Content("~/assets/pages/img/icon2.jpg")" width="60%"></label>
                </div>
                <div class="weui-cell__bd">
                    <input class="weui-input" type="password" id="Password" name="Password" placeholder="密码">
                </div>
            </div>
            <label for="RememberMe" class="weui-agree">
                <input id="RememberMe" type="checkbox" name="RememberMe" class="weui-agree__checkbox" value="true">
                <span class="weui-agree__text">
                    记住我
                </span>
            </label>
            <button type="submit" class="weui-btn weui-btn_primary" style="width: 80%;">登录</button>
            <div class="errors alert alert-danger fade in" style="display: none; margin-right: 20px; margin-left: 20px;"></div>
        </form>
    </div>
